scriptencoding utf-8

set nocompatible
set bs=2                " Allow backspacing over everything in insert mode
set ai                  " Always set auto-indenting on
set history=500          " keep 50 lines of command history
set ruler

set softtabstop=2
set expandtab
set tabstop=2           " Control the number of space characters
set shiftwidth=2        " Change the number of space characters

set incsearch           " To move the search while typing
set laststatus=2
set cmdheight=1
set backspace=2
syn on
set rnu                 " Relative lines numbers
set number              " Current line number
set mouse=a

set ignorecase
set smartcase
set hlsearch

" Only one space when joining lines
set nojoinspaces

set undofile

" Wild menu (completion)
set wildmenu
set wildmode=full
"set wildmode=longest,list

" enable folding
set foldenable

" Color the 80th column
" set colorcolumn=80

set matchpairs+=<:>

set showcmd

set cursorline
set cursorcolumn


